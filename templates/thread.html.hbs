{{> header title=title }}
    <script src="/scripts/thread.js" async></script>
    <li class="menu-item" style="text-align: center; margin: 5px; padding: 10px">{{title}}
    </li>
    {{#each posts}}
      <li class="menu-item">
        <div style="display: table" class="reply" id={{id}} author={{author.name}}>
          <div style="display: table-row">
            {{#with author}}
              <div class="profile" style="{{background}}">
                <p><a href="/profile/{{id}}" style="color: white">{{name}}</a></p>
                {{> profile-pic }}
                <div class="badge-grid">
                  {{#each badges}}
                    {{{this}}}
                  {{/each}}
                </div>
              </div>
            {{/with}}
            <div class="post">
              <div style="display: grid">
                <p>
                  <div style="min-height: 80px">
                    {{{body}}}
                  </div>
                </p>
                <div style="display: inline">
                  <div class="response-container" id="response-container-{{id}}"></div>
                </div>
                <div style="display: inline">
                  {{#each reactions}}
                    {{> item-thumbnail}}
                  {{/each}}
                </div>
                <div style="float: right; text-align: right;">
                  {{#if reward}}
                    <div class="rarity-{{reward.rarity}} hover-triggers-overlay" style="margin:5px;">
                      ‚≠ê <b>{{reward.name}}</b> was given for this post
                      <div class="overlay-on-hover item-overlay">
                        {{> item-overlay reward}}
                      </div>
                    </div>
                  {{/if}}
                  {{#if can_react}}
                    <a href="/react/{{id}}" class="react-button action-box">
                    + React!
                    </a>
                  {{/if}}
                  <div class = "reply-to-button action-box" replyid={{id}}>
                    + Respond!
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </li>
    {{/each}}
    <form action="/reply/{{id}}" method="post" id="reply">
    <li class="menu-item" style="padding-left: 25px; padding-right: 25px">
      {{#if error}}
        <div class="row">
          <div class="cell">
          </div>
          <div class="cell">
            <div class="error"> 
              {{error}}
            </div>
          </div>
        </div>
      {{/if}}
      <div>
        <textarea name="reply" id="reply-textarea" rows="8" cols="100" style="width: 75%; border-radius: 5px; padding: 5px"></textarea>
        <button type="submit" class="action-box" style="margin-bottom: 15px; margin-top: 15px; margin-left: 0px;">+ Reply!</button>
      </div>
    </li>
    </form>
  </ul>
</body>
