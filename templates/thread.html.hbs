{{> header title=title }}
    <li class="menu-item" style="text-align: center; margin: 5px; padding: 10px">{{title}}
    </li>
    {{#each posts}}
      <li class="menu-item">
        <div style="display: table" id={{id}}>
          <div style="display: table-row">
            {{#with author}}
              <div class="profile" style="{{background}}">
                <p><a href="/profile/{{id}}" style="color: white">{{name}}</a></p>
                {{> profile-pic }}
              </div>
            {{/with}}
            <div class="post">
              <p><div style="min-height: 80px">
                {{{body}}}
              </div>
              </p>
              {{#each reactions}}
                {{> item-thumbnail}}
              {{/each}}
              <div style="float: right; text-align: right;">
              {{#if reward}}
                <div class="rarity-{{reward.rarity}} hover-triggers-overlay">
                  ‚≠ê <b>{{reward.name}}</b> was given for this post
                  <div class="overlay-on-hover item-overlay">
                    {{> item-overlay reward}}
                  </div>
                </div>
              {{/if}}
              {{#if can_react}}
                <a href="/react/{{id}}" class="action-box">
                + React!
                </a>
              {{/if}}
              </div>
            </div>
          </div>
        </div>
      </li>
    {{/each}}
    <form action="/reply/{{id}}" method="post" id="reply">
    <li class="menu-item">
      {{#if error}}
        <div class="row">
          <div class="cell">
          </div>
          <div class="cell">
            <div class="error"> 
              {{error}}
            </div>
          </div>
        </div>
      {{/if}}
    <div class="row">
      <div class="cell" style="text-align: right; vertical-align: top; min-width: 180px">
        <label for="reply">Reply:</label>
      </div>
      <div class="cell" style="width: 80%">
        <div id="editor" style="background: white"></div>
        <script>
          const editor = new toastui.Editor({
              el: document.querySelector('#editor'),
          });
        </script>
      </div>
    </div>
    <div class="row">
      <div class="cell">
      </div>
      <div class="cell">
        <input type="submit" value="Submit">
      </div>
    </div>
    </li>
    </form>
  </ul>
</body>
