{{> header title="Home"}}
    <form action="/add-tag" method="post">
    <li style="display: flex; flex-wrap: wrap">
      <label class="selected-tag">
        <input type="text" name="add-tag" placeholder="add a tag" style="width: 80px; border-radius: 5px; padding: 5px;">
        <input type="submit" value="+">
      </label>
      {{#each tags}}
        <label class="selected-tag">
          <input type="hidden" name="{{name}}" value="{{id}}">
          {{name}}
          <input type="submit" value="âˆ’" style="color: red" formaction="/remove-tag/{{name}}">
        </label>
      {{/each}}
    </li>
    </form>
    {{#each posts}}
      <li class="menu-item" style="display: grid">
        <div class="table">
          <div class="row">
          <div class="cell" style="width: 55%; padding-left: 25px">
            <a href="/thread/{{id}}#reply">{{title}}</a>
          </div>
          <div class="cell" style="width: 30%">
              {{#each tags}}
                <a href="/t/{{../../curr_path}}{{this}}">
                <div class="tag">{{this}}</div>
                </a>
              {{/each}}
            </div>
          <div class="cell" style="width: 15%">
            {{#if emphasize_date}}
              <b>{{date}}</b>
            {{else}}
              {{date}}
            {{/if}}
          </div>
          </div>
        </div>
    {{/each}}
    </li>
  </ul>
</body>
